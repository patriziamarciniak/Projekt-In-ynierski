<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context="com.example.hp.firstapp2.MainActivityLastingTrip">

    <LinearLayout
        android:id="@+id/trips_layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="0.3"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/actual_event"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listViewLastingEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/trips_buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <Button

            android:id="@+id/btn_add_event_lasting"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_button_primary"
            android:padding="10dp"
            android:text="@string/title_activity_add_event"
            android:textColor="#FFFFFF"

            />

        <!--android:layout_marginLeft="20dp"-->
        <!--android:layout_marginRight="20dp"-->
        <!--android:layout_marginTop="15dp"-->
        <!--android:layout_marginBottom="10dp"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentEnd="true"-->

        <Button
            android:id="@+id/btn_coming_trips_lasting"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_add_event_lasting"
            android:layout_alignStart="@+id/btn_add_event_lasting"
            android:layout_below="@+id/btn_add_event_lasting"
            android:background="@drawable/rounded_button_green_dark"
            android:padding="10dp"
            android:text="@string/title_coming_trips"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_history_lasting"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btn_add_event_lasting"
            android:layout_alignRight="@+id/btn_add_event_lasting"
            android:layout_alignTop="@+id/btn_coming_trips_lasting"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/btn_coming_trips_lasting"
            android:background="@drawable/rounded_button_green"
            android:padding="10dp"
            android:text="@string/title_history"
            android:textColor="#FFFFFF" />
    </RelativeLayout>


</LinearLayout>