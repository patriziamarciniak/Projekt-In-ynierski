<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hp.firstapp2.EventAdded"
    tools:showIn="@layout/activity_event_added">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/event_added"
        android:id="@+id/txt_event_added"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event_edit"
        android:id="@+id/btn_edit_event"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="143dp"
        android:background="#6d93ed"
        android:padding="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_menu"
        android:id="@+id/btn_main_menu"
        android:layout_marginTop="68dp"
        android:layout_alignTop="@+id/btn_edit_event"
        android:layout_centerHorizontal="true"
        android:background="#6d93ed"
        android:padding="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_margin="50dp"
        android:layout_marginBottom="100dp"
        android:layout_above="@+id/btn_edit_event"
        android:layout_below="@+id/txt_event_added"
        android:background="#6d93ed">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txt_added_localization"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txt_added_data_start"
            android:layout_below="@+id/txt_added_localization"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:padding="10dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txt_added_time_end"
            android:textSize="30dp"
            android:padding="10dp"
            android:layout_below="@+id/txt_added_data_start"
            android:layout_alignLeft="@+id/txt_added_data_start"
            android:layout_alignStart="@+id/txt_added_data_start"
            android:textAlignment="center" />
    </RelativeLayout>

</RelativeLayout>
